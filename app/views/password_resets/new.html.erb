<h1>Forgot Password</h1>

<%= form_with url: password_reset_path do |form| %>
  <div class="mb-3" class="mb-3">
    <%= form.label :email %>
    <%= form.text_field :email, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.submit "Send reset instructions", class: "btn btn-primary" %>
  </div>
<% end %>