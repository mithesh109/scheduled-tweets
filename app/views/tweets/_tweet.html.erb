<div class="mb-3 card card-body">
  <%= tweet.body %>
  <div class="me-4">
    <%= image_tag tweet.twitter_account.image, class: "rounded-circle" %> 
    <%= link_to "@#{tweet.twitter_account.username}", "https://twitter.com/#{tweet.twitter_account.username}", target: :blank %>

    <% if tweet.published? %>
      <%= link_to "View in Twitter", "https://twitter.com/#{tweet.twitter_account.username}/status/#{tweet.tweet_id}", target: :blank %>
    <% else %>
      Scheduled for <%= l tweet.publish_at, format: :short %>
      <%= link_to "Edit Tweet", edit_tweet_path(tweet), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
